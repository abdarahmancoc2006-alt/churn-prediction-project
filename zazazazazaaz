const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
function playSound(freq, type, dur) {
  const osc = audioCtx.createOscillator();
  const gain = audioCtx.createGain();
  osc.type = type; osc.frequency.value = freq;
  osc.connect(gain); gain.connect(audioCtx.destination);
  osc.start(); gain.gain.exponentialRampToValueAtTime(0.00001, audioCtx.currentTime + dur);
  osc.stop(audioCtx.currentTime + dur);
}

function openOverlay(id) { document.getElementById(id).classList.remove('hidden'); }
function closeOverlay(id) { document.getElementById(id).classList.add('hidden'); }
function toggleMidnight() { document.body.classList.toggle('midnight-mode'); }

function showGreenMessage(msg) {
  const el = document.getElementById('greenAlert');
  el.innerText = msg || "Votre Panier est vide !! Choisir un repas";
  el.style.display = 'block';
  setTimeout(() => { el.style.display = 'none'; }, 4000);
}

function clearCart() { cart = []; updateCartUI(); }

function showMenu(brand) {
  const res = data[brand];
  const gen = (arr) => arr.map(i => {
    let finalPrice = currentDiscount > 0 ? (i.p * (1 - currentDiscount/100)).toFixed(0) : i.p;
    return `<div class="item"><span>${i.n} - ${finalPrice} MAD ${currentDiscount > 0 ? '<small style="text-decoration:line-through; opacity:0.5;">'+i.p+'</small>' : ''}</span><button onclick="addToCart('${i.n}', ${finalPrice})" style="background:var(--success); color:white; border:none; padding:8px 15px; border-radius:10px; cursor:pointer;">Ajouter</button></div>`;
  }).join('');
  document.getElementById("resTitle").innerText = brand.toUpperCase();
  document.getElementById("foodItems").innerHTML = gen(res.food);
  document.getElementById("drinkItems").innerHTML = gen(res.drinks);
  document.getElementById("menuDisplay").style.display = "block";
  window.scrollTo(0, document.getElementById('menuDisplay').offsetTop - 50);
}

function openSnacks() {
    const snackNames = ["Frites Maison üçü", "Mozzarella Sticks üßÄ", "Onion Rings üßÖ", "Nuggets Chicken üçó", "Nachos Salsa üçÖ", "Potato Wedges ü•î", "Spring Rolls ü•ó", "Calamari Rings ü¶ë", "Mini Pizzas üçï", "Cheese Balls üßÄ", "Popcorn Chicken üçø", "Hot Wings üå∂Ô∏è", "Tacos Bite üåÆ", "Garlic Bread üßÑ", "Mini Burgers üçî", "Corn Dogs üå≠", "Sweet Potato Fries üç†", "Shrimp Tempura üç§", "Empanadas ü•ü", "Falafel Bites üßÜ"];
    let price = currentDiscount > 0 ? (20 * (1 - currentDiscount/100)).toFixed(0) : 20;
    let items = snackNames.map(s => `<div class="item"><span>${s}</span><span>${price} MAD</span><button onclick="addToCart('${s}', ${price})" style="background:var(--success); color:white; border:none; padding:5px; border-radius:5px;">+</button></div>`).join('');
    document.getElementById("snacksList").innerHTML = items;
    openOverlay('snacksOverlay');
}

function openBestSellers() {
    const items = [{n:"1. Big Mac (McDo)", o: 1420}, {n:"2. Bucket 15pc (KFC)", o: 1100}, {n:"3. Caramel Macchiato", o: 950}, {n:"4. Whopper (BK)", o: 890}, {n:"5. Crunchy Taco", o: 720}];
    document.getElementById("bestSellersContent").innerHTML = items.map(i => `<div class="item"><span>${i.n}</span><span style="color:var(--orange)">${i.o} Commande(s)</span></div>`).join('');
    openOverlay('bestOverlay');
}

function addToCart(n, p) { cart.push({n, p: parseFloat(p)}); updateCartUI(); }
function updateCartUI() {
    const list = document.getElementById("liveCartItems");
    if(cart.length === 0) list.innerHTML = "<p style='text-align:center; opacity:0.5;'>Le panier est vide</p>";
    else list.innerHTML = cart.map((i, idx) => `<div class="item">${i.n} - ${i.p} MAD <button onclick="removeItem(${idx})" style="color:red; background:none; border:none; cursor:pointer;">X</button></div>`).join('');
    const total = cart.reduce((sum, i) => sum + i.p, 0);
    document.getElementById("cartTotal").innerText = total;
    document.getElementById("payTotal").innerText = total;
}
function removeItem(idx) { cart.splice(idx, 1); updateCartUI(); }

function showCommanderList() {
  if(cart.length === 0) { showGreenMessage(); return; }
  const list = document.getElementById("orderListItems");
  list.innerHTML = cart.map(i => `<div class="item"><span>${i.n}</span><span>${i.p} MAD</span></div>`).join('');
  openOverlay('orderListOverlay');
}

function openPayment() { if(cart.length === 0) showGreenMessage(); else openOverlay('paymentOverlay'); }

function processPayment() {
  closeOverlay('paymentOverlay');
  openOverlay('progressOverlay');
  let steps = [{p: 25, t: "Commande valid√©e... üìù"}, {p: 50, t: "Le Chef pr√©pare votre repas... üë®‚Äçüç≥"}, {p: 75, t: "Livreur en route vers vous... üõµ"}, {p: 100, t: "Arriv√©e imminente ! Profitez ! üòã"}];
  let current = 0;
  let interval = setInterval(() => {
    document.getElementById('pBar').style.width = steps[current].p + "%";
    document.getElementById('pText').innerText = steps[current].t;
    current++;
    if(current === steps.length) { clearInterval(interval); setTimeout(() => alert("Transaction R√©ussie! Bon App√©tit!"), 500); }
  }, 2000);
}

/* --- WHEEL LOGIC --- */
const prizes = ["10% Off", "Free Soda", "5% Off", "Free Fries", "No Luck", "Free Cookie"];
let currentRotation = 0;
const COOLDOWN_MS = (23 * 60 * 60 * 1000) + (59 * 60 * 1000); // 23h 59m

function drawWheel() {
    const canvas = document.getElementById('wheelCanvas');
    const ctx = canvas.getContext('2d');
    const arc = (2 * Math.PI) / prizes.length;
    ctx.clearRect(0,0,300,300);
    prizes.forEach((p, i) => {
        ctx.beginPath();
        ctx.fillStyle = i % 2 === 0 ? "#122a45" : "#ff8c1a";
        ctx.moveTo(150, 150);
        ctx.arc(150, 150, 140, i * arc, (i + 1) * arc);
        ctx.fill();
        ctx.save();
        ctx.fillStyle = "white";
        ctx.translate(150, 150);
        ctx.rotate(i * arc + arc / 2);
        ctx.textAlign = "right";
        ctx.font = "bold 14px Arial";
        ctx.fillText(p, 130, 5);
        ctx.restore();
    });
}

function startWheelTimer() {
    const display = document.getElementById('wheelCountdown');
    const btn = document.getElementById('spinBtn');
    
    const tick = () => {
        const lastSpin = localStorage.getItem('lastWheelSpin');
        const now = new Date().getTime();
        
        if (lastSpin && now - lastSpin < COOLDOWN_MS) {
            const remaining = COOLDOWN_MS - (now - lastSpin);
            const h = Math.floor(remaining / 3600000);
            const m = Math.floor((remaining % 3600000) / 60000);
            const s = Math.floor((remaining % 60000) / 1000);
            display.innerText = `Reviens dans: ${h}h ${m}m ${s}s`;
            btn.disabled = true;
            btn.style.opacity = "0.5";
        } else {
            display.innerText = "";
            btn.disabled = false;
            btn.style.opacity = "1";
        }
    };
    
    tick();
    if(window.wTimer) clearInterval(window.wTimer);
    window.wTimer = setInterval(tick, 1000);
}

function spinWheel() {
    const lastSpin = localStorage.getItem('lastWheelSpin');
    const now = new Date().getTime();
    if (lastSpin && now - lastSpin < COOLDOWN_MS) return;

    const wheel = document.getElementById('wheelCanvas');
    const btn = document.getElementById('spinBtn');
    btn.disabled = true;
    
    const extraSpins = (Math.floor(Math.random() * 5) + 8) * 360;
    const randomStop = Math.floor(Math.random() * 360);
    currentRotation += extraSpins + randomStop;
    
    wheel.style.transform = `rotate(${currentRotation}deg)`;

    let soundInterval = setInterval(() => playSound(400, 'sine', 0.05), 150);
    setTimeout(() => clearInterval(soundInterval), 3500);

    setTimeout(() => {
        localStorage.setItem('lastWheelSpin', new Date().getTime());
        startWheelTimer();
        
        const actualDeg = currentRotation % 360;
        const prizeIndex = Math.floor(((360 - actualDeg + 270) % 360) / (360 / prizes.length));
        const win = prizes[prizeIndex];

        if(win === "No Luck") {
            showGreenMessage("Better luck next time ‚òπÔ∏è");
            playSound(200, 'square', 0.3);
        } else {
            playSound(600, 'triangle', 0.1); playSound(800, 'triangle', 0.2);
            
            if(win.includes("Off")) {
                showGreenMessage("You won " + win + " üòÑ");
                applyDiscount(parseInt(win));
            } else if(win.includes("Free")) {
                const itemName = win.replace("Free ", "").toLowerCase();
                showGreenMessage("A free " + itemName + " has been added to your cart üòÑ");
                addToCart(win, 0);
            }
        }
    }, 4000);
}

function applyDiscount(val) {
    currentDiscount = val;
    const badge = document.getElementById('discountBadge');
    badge.innerText = val + "% OFF";
    badge.style.display = 'block';
    cart = cart.map(item => ({...item, p: item.p === 0 ? 0 : parseFloat((item.p * (1 - val/100)).toFixed(0))}));
    updateCartUI();
    const title = document.getElementById("resTitle").innerText;
    if(title !== "MENU") showMenu(title.toLowerCase());
}

function updateTimers() {
    document.querySelectorAll('.timer').forEach(timer => {
        const diff = new Date(timer.getAttribute('data-time')).getTime() - new Date().getTime();
        if (diff <= 0) { timer.innerText = "EXPIRED"; return; }
        const d = Math.floor(diff / 86400000), h = Math.floor((diff % 86400000) / 3600000), m = Math.floor((diff % 3600000) / 60000), s = Math.floor((diff % 60000) / 1000);
        timer.innerText = `${d}d ${h}h ${m}m ${s}s`;
    });
}
setInterval(updateTimers, 1000);
</script>

</body>
</html>
